@inherits MvvmComponentBase<HexEntryViewModel>

<div class="form-floating">
    <textarea aria-label="hex input" @bind="ViewModel.HexText" @bind:event="oninput" class="form-control" placeholder="Type some hex values here" id="floatingHexarea" style="height: 20rem;"></textarea>
    <label for="floatingHexarea">Hex Text</label>
</div>

<button type="button" 
        id="send-hex" 
        class="btn btn-primary mt-2"
        @onclick="ViewModel.SendToAsciiConverterCommand.Execute"
        disabled="@(!ViewModel.SendToAsciiConverterCommand.CanExecute(null))">
    Send To ASCII Display
</button>